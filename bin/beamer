#!/bin/sh
FONTSIZE=18
case $1 in
  --help)
    echo "Usage: $0 [--large|--huge]"
    exit 1
    ;;
  --huge)
    FONTSIZE=50
    ;;
  --large)
    FONTSIZE=24
    ;;
esac
FONT=xft:Fantasque\ Sans\ Mono:pixelsize=$FONTSIZE,9x15bold
urxvt \
  -fg black \
  -bg white \
  -cr gray \
  -fn "$FONT" \
  -fb "$FONT" \
  -fi "$FONT" \
  -fbi "$FONT"

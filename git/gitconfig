[core]
	editor = vim
	whitespace = trailing-space,space-before-tab
[alias]
	b = branch
	co = checkout
	cp = cherry-pick
	d = diff
	dc = diff --cached
        ds = diff --stat
	f = fetch
	ls = log --pretty=oneline --abbrev-commit
	p = push
	s = status
	sb = status -sb
	sm = submodule
	t = log --graph --decorate
	tr = log --graph --branches --decorate --remotes
	tra = log --graph --decorate --all --remotes --branches
	tro = log --pretty=oneline --abbrev-commit --graph --decorate
	unstage = reset HEAD --
        waddp = -c interactive.diffFilter="git diff --word-diff" add -p
	wc = whatchanged
	wd = diff --word-diff=color
	wdc = diff --word-diff=color --cached
	who = shortlog -s
	wip = commit -m WIP
[push]
	default = simple
[include]
	path = ~/.gitconfig.local
